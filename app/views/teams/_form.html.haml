-# frozen_string_literal: true
= simple_form_for(@team) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :name, input_html: { class: 'form-control input-lg teambox' }, :maxlength => "15", :spellcheck => "false",  :placeholder => "TEAMNAME"

    = f.hidden_field :live_game_id, value: @live_game_id

  .form-actions
    = f.submit :ESCAPE, :class => "btn btn-dark escapebutton"
